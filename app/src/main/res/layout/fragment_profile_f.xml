<!--<?xml version="1.0" encoding="utf-8"?>-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="55dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">
        <!--<LinearLayout-->
        <!--android:orientation="vertical"-->
        <!--xmlns:android="http://schemas.android.com/apk/res/android"-->
        <!--xmlns:app="http://schemas.android.com/apk/res-auto"-->
        <!--android:paddingTop="30dp"-->
        <!--android:paddingLeft="24dp"-->
        <!--android:paddingRight="24dp"-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="fill_parent">-->

        <TextView
            android:id="@+id/tv1"
            android:layout_width="339dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Friend's PROFLIE"
            android:textColor="@color/dodgerblue"
            android:textSize="30sp"
            android:textStyle="bold" />


        <LinearLayout
            android:padding="5dp"
            android:layout_width="338dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="72dp"
                android:layout_height="40dp"
                android:text="Email:"
                />

            <TextView
                android:id="@+id/f_email"
                android:layout_width="266dp"
                android:layout_height="wrap_content"
                />

        </LinearLayout>


        <LinearLayout
            android:padding="5dp"
            android:layout_width="338dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_firstNm"
                android:layout_width="72dp"
                android:layout_height="40dp"
                android:text="FirstName:"/>

            <TextView
                android:id="@+id/f_firstNm"
                android:layout_width="266dp"
                android:layout_height="wrap_content"
                android:layout_weight="6.50"
                android:ems="10"/>

        </LinearLayout>

        <LinearLayout
            android:padding="5dp"
            android:layout_width="338dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_surNm"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:text="SurName:"
                />

            <TextView
                android:id="@+id/f_surNm"
                android:layout_width="266dp"
                android:layout_height="wrap_content"
                android:ems="10"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.08"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/tv_course"
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Course:"/>

            <TextView
                android:id="@+id/f_course"
                android:layout_width="266dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/tv_doB"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.04"
                android:gravity="center_vertical"
                android:text="Birth:"/>

            <TextView
                android:id="@+id/tv_showDoB"
                android:layout_width="238dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.10"
                android:onClick="showDatePickerDialog"
                android:textColor="?attr/colorAccent"
                android:textSize="16sp"/>

        </LinearLayout>

        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_gender"
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:text="Gender:"/>

            <TextView
                android:id="@+id/f_gender"
                android:layout_width="266dp"
                android:layout_height="match_parent">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_studyMode"
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:text="StudyMode"/>

            <TextView
                android:id="@+id/f_studyMode"
                android:layout_width="266dp"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="338dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_currentJob"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="CurrentJob:"/>

            <TextView
                android:id="@+id/f_currentJob"
                android:layout_width="238dp"
                android:layout_height="wrap_content"
                android:ems="10"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/tv_nativeLanguage"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="NativeLanguage:"/>

            <TextView
                android:id="@+id/f_language"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/tv_nationality"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Nationality:"/>

            <TextView
                android:id="@+id/f_nationality"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_addr"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:text="Address:"
                />

            <TextView
                android:id="@+id/f_addr"
                android:layout_width="266dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:padding="5dp"
            android:layout_width="338dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_suburb"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:text="Suburb:"
                />

            <TextView
                android:id="@+id/f_suburb"
                android:layout_width="266dp"
                android:layout_height="wrap_content"
                android:ems="10"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="338dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_favoriteUnit"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="FavoriteUnit:"/>

            <TextView
                android:id="@+id/f_favoriteUnit"
                android:layout_width="238dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/tv_favoriteSport"
                android:layout_width="101dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="FavoriteSport:" />

            <TextView
                android:id="@+id/f_favoriteSport"
                android:layout_width="226dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="338dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_favoriteMovie"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="FavoriteMovie:"/>

            <TextView
                android:id="@+id/f_favoriteMovie"
                android:layout_width="238dp"
                android:layout_height="wrap_content"
                android:ems="10"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>